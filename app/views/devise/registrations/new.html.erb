<div class="container-fluid login col-lg-4 col-sm-10 offset-lg-4 offset-sm-1">
  <h1 class = "text-center">Sign Up</h1>
  <%= image_tag "underline.png", class: "img-fluid"%>
  <br /><br /><br />
    <div class = "form-group ">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.input :email, label: false, placeholder: "Email Address", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.input :password, label: false, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.input :password_confirmation, label: false, placeholder: "Repeat password", autocomplete: "off", class: "form-control" %>
        </div>
        <br />
        <div class="actions">
          <%= button_tag(type: 'submit', class: 'btn btn-main float-right') do %>
            <span class = "btn-inner--icon"><i class="fas fa-user"></i></span>&nbsp;&nbsp;&nbsp;<span class = "btn-inner--text">Sign Up</span>
          <% end %>
        </div>
        <div class = "float-left">
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>