<body style="background-color:#FDFDFD;">
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 login">
      <br />
      <br />
      <br />
      <br />
      <div class = "form-group col-md-8 offset-2">
      <h1>Sign Up</h1>
      <br /><br />
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.input :email, label: false, placeholder: "Email Address", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.input :password, label: false, placeholder: "Password", autocomplete: "off", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.input :password_confirmation, label: false, placeholder: "Repeat password", autocomplete: "off", class: "form-control" %>
        </div>
        <br />
        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-main' %>
        </div>
        <% end %>
      <br />
      <br />
      <p> Already have an account? <%= render "devise/shared/links" %></p>
    </div>
    </div>
    <div class="col-md-6 sign-up-photo">
      <%= image_tag("sign-up-2-min.jpg")%>
    </div>
  </div>
</div>
</body>