<div class="container-fluid login col-lg-4 col-sm-10 offset-lg-4 offset-sm-1">
  <h1 class = "text-center">Sign Up</h1>
    <div class = "form-group ">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.input :email, label: "Email", autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.input :password, label: "Password", placeholder: "Password", autocomplete: "off", class: "form-control", input_html: {id: "password", "data-toggle": "tooltip", "data-placement": "right", title: "#{@minimum_password_length} characters minimum"} %>
          <div id="capslockdiv" style="display: none; color: red; font-weight: 600;"> WARNING: Caps Lock is on </div>
        </div>

        <div class="field">
          <%= f.input :password_confirmation, label: "Repeat Password", placeholder: "Repeat password", autocomplete: "off", class: "form-control", input_html: {id: "password"}  %>
        </div>
        <br />
        <div class="actions text-center">
          <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
            <span class = "btn-inner--icon"><i class="fas fa-user"></i></span>&nbsp;&nbsp;&nbsp;<span class = "btn-inner--text">Join Now</span>
          <% end %>
        </div>
        <br />
        <h6 class = "text-center">OR</h2>
        <br />
        <div>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  $('#password').keypress(function(e) {
    var s = String.fromCharCode( e.which );
    if ( s.toUpperCase() === s && s.toLowerCase() !== s && !e.shiftKey ) {
      $('#capslockdiv').show();
    }
    else { 
      $('#capslockdiv').hide();
    }
  });

  $("#new_user").validate();
</script>