<div class="container-fluid vendor-profile">
  <div class=" col-md-10 offset-1">
    <%= image_tag 'sign-up.jpg', class: "vendor-image-profile thumbnail", align: "left" %>
    
    <div class="vendor-profile-text">
      <% if current_user == current_vendor.user %>
        <button type="button" class="btn btn-sm btn-danger float-right btn-spacing" data-toggle="modal" data-target="#deleteProfileModal">
        Delete Profile
        </button>
        <button type="button" class="btn btn-sm btn-main float-right btn-spacing" data-toggle="modal" data-target="#editModal">
        Edit Profile
        </button>
        <%= link_to 'Edit Availability', new_vendor_availability_path(current_vendor), class: "btn btn-sm btn-main float-right btn-spacing"%>
      <% end %>
      <h1><%=current_vendor.name%></h1>
      <p>
        <%= current_vendor.address %>, 
        <% if current_vendor.zip.present? %>
          <%= current_vendor.zip %>,
        <% end %>
        <%= current_vendor.city %>, <%= current_vendor.country_name %>
      </p>
      <% if current_vendor.phone2.present? %>
        <p>Phone Numbers: 
        <%=current_vendor.phone1%>/<%=current_vendor.phone2%></p>
      <% else %>
        <p>Phone Number: <%=current_vendor.phone1%></p>
      <% end %>
      <% if current_vendor.facebook.present? %>
        <p>Facebook URL
        <%=current_vendor.facebook %></p>
      <% end %>
      <% if current_vendor.website.present? %>
        <p>Website
        <%=current_vendor.website %></p>
      <% end %>
    </div>
  </div>
</div>

<br />
<br />
<div class = "container">
  <div class = "row">
    <div class = "vendor-services col-lg-8">
      <% if current_vendor.services.blank? && current_user == current_vendor.user %>
        <h2 class = 'first-service text-center'> Get your page up and running.</h2>
        <div class = 'text-center'>
          <button type="button" class="btn btn-lg btn-main" data-toggle="modal" data-target="#serviceModal">
          Add your first Service
          </button> 
        </div>
        <div class = "col-md-8 offset-2">
          <p>By adding your individual services to your Enstyle.me page, potential clients know exactly what you offer and can book online!</p>
          <br />
          <br />
        </div>
      <% else %>
        <h3 class = "text-center">List of Services</h3>
        <% if current_vendor.user == current_user %>
          <div class = "text-center">
            <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#serviceModal">
              Add Another Service
            </button> 
          </div>
        <% end %>
          <br />
      <% end %>

      <% if current_vendor.services.present? %>
        <table class="table table-hover table-cards align-items-center">
          <thead>
            <tr>
              <th scope="col">Service</th>
              <th scope="col">Duration/Cost</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
          <% current_vendor.services.each do |service| %>
            <tr class="bg-white">
              <th scope="row">
                <div class="media align-items-center">
                  <% if service.image.present? %>
                    <%= image_tag service.image, class: 'img-fluid', class:"avatar avatar-lg mr-3" %>
                  <% end %>
                  <div class="media-body">
                    <h6 class="h5 font-weight-normal mb-0"><%= service.name %></h6>
                    <span class="font-weight-normal text-muted"><%=service.description%></span>
                  </div>
                </div>
              </th>
              <td>
                <% if service.cost_range.present? %>
                  Cost Range: <%= service.cost_range %>
                <% elsif service.cost_absolute.present? %>
                  Fixed Cost: <%= sprintf("%.2f",service.cost_absolute) %>
                <% else %>
                  Cost not specified.
                <% end %>
                / Duration: <%=service.hours%>hrs <%=service.minutes %>mins
              <td>
              <% if current_vendor.user == current_user %>
                <%= link_to "Edit Service", edit_vendor_service_path(current_vendor, service), class: 'btn btn-sm btn-primary float-right btn-space'%> 
                <%= link_to "Delete Service", vendor_service_path(current_vendor, service), method: :delete, data: {confirm: 'Are you sure? This action cannot be reversed.'}, class: 'btn btn-sm btn-danger float-right btn-space'%>
              <% else %>
                <%= link_to "Book Now", '#', class: 'btn btn-sm btn-primary float-right' %>
              <% end %>
              </td>
            </tr>
            <tr class="table-divider"></tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
    <div class = "col-lg-4 text-center">
    Hours:
    <p>Monday: 8:00AM - 10:00PM</p>
    <p>Tuesday: 8:00AM - 10:00PM</p>
    <p>Wednesday: 8:00AM - 10:00PM</p>
    <p>Thursday: 8:00AM - 10:00PM</p>
    <p>Friday: 8:00AM - 10:00PM</p>
    <p>Saturday: CLOSED</p>
    <p>Sunday: CLOSED</p>
    </div>
  </div>
</div>

<br />
<br />
<br />

<!-- Edit Page Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModal">Edit your Page</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          <%= simple_form_for @vendor, url: vendor_path(@vendor) do |f| %>
            <%= f.input :name, label: "Company Name" %>          
            <div class = "row">
              <div class = "col-md-4">
                <%= f.input :city %>
              </div>
              <div class = "col-md-4">
                <%= f.input :country, only: ["BS", "TT", "TC", "JM", "BB", "AG"] %>
              </div>
              <div class = "col-md-4">
                <%= f.input :zip %>
              </div>
            </div>
            <%= f.input :address, label: "Street Address" %>  
            <div class = "row">
              <div class = "col-md-6">
                <%= f.input :phone1, label: "Phone Number" %>
              </div>
              <div class = "col-md-6">
                <%= f.input :phone2, label: "Alternate Phone Number" %>
              </div>
            </div>
            <%= f.input :facebook, label: "Company Facebook URL" %>
            <%= f.input :website, label: "Company Website URL" %>
          </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Save", class: 'btn btn-primary' %> 
      </div>
    <% end %>
    </div>
  </div>
</div>


<!-- Add Service Modal -->
<div class="modal fade" id="serviceModal" tabindex="-1" role="dialog" aria-labelledby="serviceModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="serviceModal">Add a Service</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          <%= simple_form_for @service, url: vendor_services_path(@vendor) do |f| %>
            <%= f.input :name, label: false, placeholder: "Service Name (e.g. Box braids)", input_html: {class: "form-control form-control-sm" } %> 
            <%= f.input :description, label: false, placeholder: 'Description of service (e.g. "Box braids done with kanekalon hair. Hair not included.")', input_html: {class: "form-control form-control-sm" } %>
            <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true}, label: "Select Categories" %>
            <div class = "row">
              <div class = "col-md-6">
                <%= f.input :hours, label: false,prompt: "Duration in hours", collection: [0, 1, 2, 3, 4, 5 , 6, 7, 8], input_html: {class: "form-control form-control-sm"} %>
              </div>
              <div class = "col-md-6">
                <%= f.input :minutes, label: false, prompt: "Duration in Minutes", collection: [0, 15, 30, 45], input_html: {class: "form-control form-control-sm"} %>
              </div>
            </div>
            <div class = "row">
              <p class = "service-modal-box text-center">If the service has a precise price, fill out the fixed price box. If the service has a price range (e.g. $30 - $50), fill out the price range. <strong>Note: If you give a cost range, users will not be able to pay you online.</strong>. Only fill out one cost field.
              <div class = "col-md-6">
                <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Price", currency:"BSD", input_html: {class: "form-control form-control-sm" } %>
              </div>
              <div class = "col-md-6">
                <%= f.input :cost_range, label: false, placeholder: "Price Range", input_html: {class: "form-control form-control-sm" } %>
              </div>
            </div>
            <%= f.input :image, label: "Add an Image (Optional)", input_html: {class: 'btn btn-secondary btn-sm'}%>
            <p class = "service-modal-box text-center">Only .jpg, .jpeg, and .png photo formats. Max size 10MB.</p>
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add Service", class: 'btn btn-primary' %> 
        </div>
        <% end %>
    </div>
  </div>
</div>

<!-- Delete Profile Modal -->
<div class="modal fade" id="deleteProfileModal" tabindex="-1" role="dialog" aria-labelledby="deleteProfileModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteProfileModal">Delete Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          Are you sure you want to delete your vendor profile? <strong> This action cannot be reversed.</strong>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <%= link_to 'Delete Profile', vendor_path(@vendor), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

