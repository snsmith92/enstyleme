<br />
<br />

<!-- Edit Page Modal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModal">Edit your Page</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          <%= simple_form_for @vendor, url: vendor_path(@vendor) do |f| %>
            <%= f.input :name, label: "Company Name" %>          
            <div class = "row">
              <div class = "col-md-4">
                <%= f.input :city %>
              </div>
              <div class = "col-md-4">
                <%= f.input :country, only: ["BS", "TT", "TC", "JM", "BB", "AG"] %>
              </div>
              <div class = "col-md-4">
                <%= f.input :zip %>
              </div>
            </div>
            <%= f.input :address, label: "Street Address" %>  
            <div class = "row">
              <div class = "col-md-6">
                <%= f.input :phone1, label: "Phone Number" %>
              </div>
              <div class = "col-md-6">
                <%= f.input :phone2, label: "Alternate Phone Number" %>
              </div>
            </div>
            <%= f.input :facebook, label: "Company Facebook URL" %>
            <%= f.input :website, label: "Company Website URL" %>
          </div>
        </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= f.submit "Save", class: 'btn btn-primary' %> 
      </div>
    <% end %>
    </div>
  </div>
</div>


<!-- Add Service Modal -->
<div class="modal fade" id="serviceModal" tabindex="-1" role="dialog" aria-labelledby="serviceModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="serviceModal">Add a Service</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          <%= simple_form_for @service, url: vendor_services_path(@vendor) do |f| %>
            <%= f.input :name, label: false, placeholder: "Service Name (e.g. Box braids)", input_html: {class: "form-control form-control-sm" } %> 
            <%= f.input :description, label: false, placeholder: 'Description of service (e.g. "Box braids done with kanekalon hair. Hair not included.")', input_html: {class: "form-control form-control-sm" } %>
            <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true}, label: "Select Categories" %>
            <div class = "row">
              <div class = "col-md-6">
                <%= f.input :hours, label: "Duration in Hours", collection: [0, 1, 2, 3, 4, 5 , 6, 7, 8], input_html: {class: "form-control form-control-sm"} %>
              </div>
              <div class = "col-md-6">
                <%= f.input :minutes, label: "Duration in Minutes", collection: [0, 15, 30, 45], input_html: {class: "form-control form-control-sm"} %>
              </div>
            </div>
            <div class = "row">
              <p class = "service-modal-box text-center">If the service has a precise cost, fill out the fixed cost box. If the service has a cost range (e.g. $30 - $50), fill out the cost range. <strong>Note: If you give a cost range, users will not be able to pay you online.</strong>. Only fill out one cost field.
              <div class = "col-md-6">
                <% if current_vendor.country == "BS"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost", currency:"BSD", input_html: {class: "form-control form-control-sm" } %>
                <% elsif current_vendor.country == "JM"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost", input_html: {class: "form-control form-control-sm" } %>
                <% elsif current_vendor.country == "TT"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost", currency:"TTD", input_html: {class: "form-control form-control-sm" } %>
                <% elsif current_vendor.country == "TC"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost",  currency:"USD", input_html: {class: "form-control form-control-sm" } %>
                <% elsif current_vendor.country == "BB"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost",  currency:"BBD", input_html: {class: "form-control form-control-sm" } %>
                <% elsif current_vendor.country == "AG"%>
                  <%= f.input :cost_absolute, as: :currency, label: false, placeholder: "Fixed Cost", currency:"ECD", input_html: {class: "form-control form-control-sm" } %>
                <% end %>
              </div>
              <div class = "col-md-6">
                <%= f.input :cost_range, label: false, placeholder: "Cost Range", input_html: {class: "form-control form-control-sm" } %>
              </div>
            </div>
            <%= f.input :image, label: "Add an Image (Optional)", input_html: {class: 'btn btn-secondary btn-sm'}%>
        </div>
      </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= f.submit "Add Service", class: 'btn btn-primary' %> 
        </div>
        <% end %>
    </div>
  </div>
</div>

<!-- Delete Profile Modal -->
<div class="modal fade" id="deleteProfileModal" tabindex="-1" role="dialog" aria-labelledby="deleteProfileModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteProfileModal">Delete Profile</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class = "vendor-form container-fluid">
          Are you sure you want to delete your vendor profile? <strong> This action cannot be reversed.</strong>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <%= link_to 'Delete Profile', vendor_path(@vendor), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>

