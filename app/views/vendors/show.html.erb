<div class="container-fluid vendor-profile">
  <div class=" col-md-10 offset-1">
    <%= image_tag 'sign-up.jpg', class: "vendor-image-profile thumbnail", align: "left" %>
    
    <div class="vendor-profile-text">
      <% if current_user == current_vendor.user %>
        <button type="button" class="btn btn-sm btn-primary float-right btn-spacing" data-toggle="modal" data-target="#editModal">
        Edit Profile Details
        </button>
        <button type="button" class="btn btn-sm btn-danger float-right btn-spacing" data-toggle="modal" data-target="#deleteProfileModal">
        Delete Profile
        </button>
      <% end %>
      <h1><%=current_vendor.name%></h1>
      <p>
        <%= current_vendor.address %>, 
        <% if current_vendor.zip.present? %>
          <%= current_vendor.zip %>,
        <% end %>
        <%= current_vendor.city %>, <%= current_vendor.country_name %>
      </p>
      <% if current_vendor.phone2.present? %>
        <p>Phone Numbers: 
        <%=current_vendor.phone1%>/<%=current_vendor.phone2%></p>
      <% else %>
        <p>Phone Number: <%=current_vendor.phone1%></p>
      <% end %>
      <% if current_vendor.facebook.present? %>
        <p>Facebook URL
        <%=current_vendor.facebook %></p>
      <% end %>
      <% if current_vendor.website.present? %>
        <p>Website
        <%=current_vendor.website %></p>
      <% end %>
    </div>
  </div>
</div>

<br />
<br />
<div class = "vendor-services col-md-8 offset-2">
  <% if current_vendor.services.blank? && current_user == current_vendor.user %>
    <h2 class = 'first-service text-center'> Get your page up and running! </h2>
    <div class = 'text-center'>
      <button type="button" class="btn btn-start-light" data-toggle="modal" data-target="#serviceModal">
      Add your first Service
      </button> 
    </div>
    <div class = "col-md-8 offset-2">
      <p>By adding your individual services to your <span class = "logo-text-1">enstyle</span><span class = "logo-text-2">.me</span> page, potential clients know exactly what you offer.</p>
      <br />
      <br />
    </div>
  <% else %>
    <h3 class = "text-center">List of Services</h3>
    <% if current_vendor.user == current_user %>
      <div class = "text-center">
        <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#serviceModal">
          Add Another Service
        </button> 
      </div>
    <% end %>
      <br />
  <% end %>


  <table class="table table-hover table-cards align-items-center">
    <thead>
      <tr>
        <th scope="col">Service</th>
        <th scope="col">Duration/Cost</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
    <% current_vendor.services.each do |service| %>
      <tr class="bg-white">
        <th scope="row">
          <div class="media align-items-center">
            <% if service.image.present? %>
              <%= image_tag service.image, class: 'img-fluid', class:"avatar avatar-lg mr-3" %>
            <% end %>
            <div class="media-body">
              <h6 class="h5 font-weight-normal mb-0"><%= service.name %></h6>
              <span class="font-weight-normal text-muted"><%=service.description%></span>
            </div>
          </div>
        </th>
        <td>
          <% if service.cost_range.present? %>
            Cost Range: <%= service.cost_range %>
          <% elsif service.cost_absolute.present? %>
            Fixed Cost: <%= sprintf("%.2f",service.cost_absolute) %>
          <% else %>
            Cost not specified.
          <% end %>
           / Duration: <%=service.hours%>hrs <%=service.minutes %>mins
        <td>
        <% if current_vendor.user == current_user %>
          <%= link_to "Edit Service", edit_vendor_service_path(current_vendor, service), class: 'btn btn-sm btn-primary float-right btn-space'%> 
          <%= link_to "Delete Service", vendor_service_path(current_vendor, service), method: :delete, data: {confirm: 'Are you sure? This action cannot be reversed.'}, class: 'btn btn-sm btn-danger float-right btn-space'%>
        <% else %>
          <%= link_to "Book Now", '#', class: 'btn btn-sm btn-primary float-right' %>
        <% end %>
        </td>
      </tr>
      <tr class="table-divider"></tr>
      <% end %>
    </tbody>
  </table>
</div>

