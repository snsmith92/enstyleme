<!DOCTYPE html>
<html>
  <head>
    <title>Enstyle.me</title>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag asset_path('favicon 64x64.png'), rel: 'icon', type: "image/png" %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "fontawesome-all.min" %>
    <%= javascript_include_tag "bootstrap-select.min" %>
    <%= javascript_include_tag "bootstrap-tagsinput.min" %>
    <%= javascript_include_tag "input-mask.min" %>
    <%= javascript_include_tag "nouislider.min" %>
    <%= javascript_include_tag "textarea-autosize.min" %>
    <%= javascript_include_tag "theme" %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light py-4">
      <div class="container-fluid">
        <%= link_to root_path, class: "navbar-brand" do %>
          <%= image_tag 'logo-no-background.png', class: "logo" %>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse offcanvas-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto align-items-lg-center">
            <h6 class="dropdown-header font-weight-600 d-lg-none px-0">Menu</h6>
            <% if user_signed_in? == false %>
              <li class="nav-item">
                <%= link_to "Log In", new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end  %>
            <li class="nav-item">
              <%= link_to "View Services", services_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to "Help", '#', class: 'nav-link' %>
            </li>
            <% if user_signed_in? && current_user.vendors != nil %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbar_main_dropdown_1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Your Business</a>
                <div class="dropdown-menu" aria-labelledby="navbar_1_dropdown_1">
                  <%= link_to 'Manage Profile', '#', class: 'dropdown-item'%>
                  <%= link_to 'View Calendar', '#', class: 'dropdown-item'%>
                  <%= link_to 'Your Stats', '#', class: 'dropdown-item'%>
                </div>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Get Started", start_path, class: 'nav-link d-lg-none', 'data-target' => '_blank' %>
                <%= link_to "Get Started", start_path, class: 'btn btn-sm btn-main d-none d-lg-inline-flex', 'data-target' => '_blank' %>
              </li>
            <% elsif user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Get Started", start_path, class: 'nav-link d-lg-none', 'data-target' => '_blank' %>
                <%= link_to "Get Started", start_path, class: 'btn btn-sm btn-main d-none d-lg-inline-flex', 'data-target' => '_blank' %>
              </li>
            <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to "Sign Out", destroy_admin_session_path, method: :delete, class: 'nav-link' %>
              </li>
              <li>
                <%= link_to "Admin Dashboard", administrators_path, class: 'btn btn-primary' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "For Businesses", business_path, class: 'nav-link d-lg-none', 'data-target' => '_blank' %>
                <%= link_to "For Businesses", business_path, class: 'btn btn-sm btn-main d-none d-lg-inline-flex', 'data-target' => '_blank' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
    <%= yield %>

    <footer class="footer">
      <div class="container">
        <span>Copyright &copy; 2018 Enstyle.me </span>
        <span><%= link_to 'Admin Login', new_admin_session_path %> </span>
      </div>
    </footer>

  </body>
</html>

<script>
  $(document).on('ready page:load', function () {
      $('#service_tag_ids').chosen({
        allow_single_deselect: true,
        width: '100%'
      })
    });
</script>

