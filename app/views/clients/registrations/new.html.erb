<div class="container-fluid login col-lg-4 col-sm-10 offset-lg-4 offset-sm-1">
  <h2 class = "text-center">Sign Up</h2>
  <h5 class = "text-center text-muted">Start booking stylists quickly and easily today.</h5>
  <br />
  <h6 class = "text-center text-muted">Are you a stylist/business seeking to bring your business online? Sign up <%= link_to 'here', new_user_registration_path %>, or <%= link_to 'learn more', business_path %> about what Enstyle.me can offer your business. </h6>
  <br />
    <div class = "form-group ">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="field">
          <%= f.input :email, label: false, placeholder: "Email Address", autofocus: true, autocomplete: "email", class: "form-control", input_html: {class: 'form-control', type: "text"} %>
        </div>

        <div class="field">
          <%= f.input :password, label: false, placeholder: "Password", autocomplete: "off", class: "form-control", input_html: {id: "password", "data-toggle": "tooltip", "data-placement": "right", title: "#{@minimum_password_length} characters minimum"} %>
          <div id="capslockdiv" style="display: none; color: red; font-weight: 600;"> WARNING: Caps Lock is on </div>
        </div>

        <div class="field">
          <%= f.input :password_confirmation, label: false, placeholder: "Repeat Password", autocomplete: "off", class: "form-control", input_html: {id: "password"}  %>
        </div>
        <br />
        <div class = "container-fluid">
          <div class = "col-md-6 offset-md-3 col-sm-12">
            <div class="actions">
              <%= button_tag(type: 'submit', class: 'btn btn-primary btn-block') do %>
                <span class = "btn-inner--icon"><i class="fas fa-user"></i></span>&nbsp;&nbsp;&nbsp;<span class = "btn-inner--text">Join Now</span>
              <% end %>
            </div>
          </div>
        </div>
        
        <br />
        <h6 class = "text-center">OR</h2>
        <br />

        <div class = "container-fluid">
          <div class = "col-md-8 offset-md-2 col-sm-12">
            <%= render "clients/shared/links" %>
          </div>
        </div>
        
      <% end %>
    </div>
  </div>
</div>

<script>
  $('#password').keypress(function(e) {
    var s = String.fromCharCode( e.which );
    if ( s.toUpperCase() === s && s.toLowerCase() !== s && !e.shiftKey ) {
      $('#capslockdiv').show();
    }
    else { 
      $('#capslockdiv').hide();
    }
  });

  $("#new_user").validate();
</script>