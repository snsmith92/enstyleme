<% title "Edit #{@service.name}" %>

<div class = "vendor-sign-up">
  <div class = "vendor-sign-up-header text-center">
      <h1>Edit Your Service</h1>
      <h6 class = "text-muted">Edit "<%=@service.name %>"</h6>
  </div>
  <div class="container-fluid vendor-form">
    <div class="col-md-6 offset-3">
      <div class = "vendor-form">
        <%= simple_form_for @service, url: vendor_service_path(@vendor) do |f| %>
        <%= f.input :name, label: "Service Name", input_html: {class: "form-control form-control-sm"} %>       
        <%= f.input :description, label: "Description of service", input_html: {class: "form-control form-control-sm"} %>
        <%= f.input :tag_ids, as: :select, collection: Tag.order(:name), label_method: :name, input_html: {multiple: true}, label: "Select Categories" %>
        <div class = "row">
          <div class = "col-md-6 form-group-sm">
            <%= f.input :hours, label: "Duration: Hrs", collection: [0, 1, 2, 3, 4, 5 , 6, 7, 8], input_html: {class: 'selectpicker line-height' } %>
          </div>
          <div class = "col-md-6 form-group-sm">
            <%= f.input :minutes, label: "Duration: Mins", collection: [0, 15, 30, 45], input_html: {class: 'selectpicker line-height' } %>
          </div>
        </div>
        <div class = "row">
          <p class = "service-modal-box text-center">If the service has a precise cost, fill out the fixed cost box. If the service has a cost range (e.g. $30 - $50), fill out the cost range. <strong>Note: If you give a cost range, users will not be able to pay you online.</strong>. Only fill out one cost field.
          <div class = "col-md-6 form-group-sm">
            <% if @vendor.country == "BS"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost", currency:"$BSD", input_html: {class: "form-control form-control-sm" } %>
            <% elsif @vendor.country == "JM"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost", input_html: {class: "form-control form-control-sm" } %>
            <% elsif @vendor.country == "TT"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost", currency:"TTD", input_html: {class: "form-control form-control-sm" } %>
            <% elsif @vendor.country == "TC"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost", currency:"USD", input_html: {class: "form-control form-control-sm" } %>
            <% elsif @vendor.country == "BB"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost",  currency:"BBD", input_html: {class: "form-control form-control-sm" } %>
            <% elsif @vendor.country == "AG"%>
              <%= f.input :cost_absolute, as: :currency, label: "Fixed Cost", currency:"ECD", input_html: {class: "form-control form-control-sm" } %>
            <% end %>
          </div>
          <div class = "col-md-6">
            <%= f.input :cost_range, label: "Cost Range", placeholder: "Cost Range", input_html: {class: "form-control form-control-sm" } %>
          </div>
        </div>
      </div>
      <%= f.submit "Update", class: 'btn btn-primary float-right' %> 
      <% end %>
    </div>
    <br /><br /><br /><br />
  </div>
</div>